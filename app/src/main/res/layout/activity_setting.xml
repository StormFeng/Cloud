<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <TextView
        android:id="@+id/tvAccountManege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="账号管理"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_arrow_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/llClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvClearCache"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#292929"
            android:text="清除缓存"
            android:textSize="15sp"
            android:background="@color/white"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#292929"
            android:textSize="15sp"
            android:background="@color/white"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_arrow_r"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <CheckBox
        android:id="@+id/cbWuRao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="勿扰模式"
        android:button="@null"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/selector_cb_setting"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <CheckBox
        android:id="@+id/cbNoticeSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="消息提醒设置"
        android:button="@null"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/selector_cb_setting"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/tvChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="修改密码"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_arrow_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="关于云众利"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_arrow_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="检测更新"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_arrow_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"/>
    <TextView
        android:id="@+id/btnOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:text="退出登录"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_arrow_r"/>
</LinearLayout>