<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="5dp"
            android:src="@drawable/icon_bg_personal"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="12dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tvCardIcon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:riv_corner_radius="20dp"
                android:src="@drawable/icon_zsyh"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="中国招商银行"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tvCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="储蓄卡"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 0851"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlAddCard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_dashstroke"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9A9A"
            android:text="添加银行卡"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/icon_plus"
            android:drawablePadding="15dp"/>
    </RelativeLayout>
</RelativeLayout>